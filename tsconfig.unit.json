{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist-unit",
    "module": "commonjs",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": false,
    "declaration": false,
    "sourceMap": false
  },
  "include": [
    "tests/scripts/stagehand/**/*.ts",
    "tests/unit/**/*.ts"
  ]
}

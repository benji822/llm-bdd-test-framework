{
  "name": "llm-bdd-test-framework",
  "version": "1.0.0",
  "description": "Stagehand-first BDD Test Framework with deterministic Playwright artifacts",
  "private": false,
  "license": "MIT",
  "keywords": [
    "bdd",
    "testing",
    "playwright",
    "stagehand",
    "gherkin",
    "deterministic",
    "automation"
  ],
  "scripts": {
    "bdd": "tsx tests/scripts/cli-bdd.ts",
    "bdd:record": "tsx tests/scripts/cli-bdd.ts record",
    "bdd:compile": "tsx tests/scripts/cli-bdd.ts compile",
    "bdd:run": "tsx tests/scripts/cli-bdd.ts run",
    "bdd:verify": "tsx tests/scripts/cli-bdd.ts verify",
    "ci:policy": "tsx tests/scripts/ci-policy.ts",
    "pretest": "tsx tests/scripts/ci-policy.ts",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report"
  },
  "devDependencies": {
    "@browserbasehq/stagehand": "^3.0.1",
    "@cucumber/gherkin": "^36.0.0",
    "@playwright/test": "^1.56.1",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.19",
    "@types/uuid": "^9.0.8",
    "dotenv": "^16.4.5",
    "gherkin-lint": "^4.2.4",
    "js-yaml": "^4.1.0",
    "playwright-bdd": "^8.4.1",
    "tsx": "^4.15.3",
    "typescript": "^5.0.0",
    "uuid": "^9.0.1",
    "zod": "^3.23.8"
  }
}

{
  "name": "llm-bdd-test-framework",
  "version": "1.0.0",
  "description": "LLM-Powered BDD Test Framework - Transform plain text specs into executable Playwright tests",
  "private": false,
  "license": "MIT",
  "keywords": [
    "bdd",
    "testing",
    "playwright",
    "llm",
    "gherkin",
    "ai-powered",
    "test-automation"
  ],
  "scripts": {
    "spec:questions": "tsx tests/scripts/cli-questions.ts",
    "spec:normalize": "tsx tests/scripts/cli-normalize.ts",
    "spec:normalize:batch": "tsx tests/scripts/cli-normalize.ts --batch",
    "spec:validate-and-fix": "tsx tests/scripts/cli-validate-and-fix.ts",
    "spec:features": "tsx tests/scripts/cli-features.ts",
    "spec:compile-graph": "tsx tests/scripts/cli-compile-graph.ts",
    "spec:collect-selectors": "tsx tests/scripts/cli-collect-selectors.ts",
    "spec:selector-drift": "tsx tests/scripts/cli-selector-drift.ts",
    "spec:validate": "tsx tests/scripts/cli-validate.ts",
    "spec:ci-verify": "tsx tests/scripts/cli-ci-verify.ts",
    "ci:policy": "tsx tests/scripts/ci-policy.ts",
    "spec:benchmarks": "tsx tests/scripts/benchmarks.ts",
    "bdd:record-login": "tsx tests/scripts/cli-record-login.ts",
    "bdd": "tsx tests/scripts/cli-bdd.ts",
    "pretest": "tsx tests/scripts/ci-policy.ts",
    "test": "playwright test",

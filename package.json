    "@types/uuid": "^9.0.8",
    "dotenv": "^16.4.5",
    "gherkin-lint": "^4.2.4",
    "js-yaml": "^4.1.0",
    "playwright-bdd": "^8.4.1",
    "tsx": "^4.15.3",
    "typescript": "^5.0.0",
    "uuid": "^9.0.1",
    "zod": "^3.23.8"
